@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="premium-auth-list">
    @if (SignInManager.IsSignedIn(User))



    {
        @if (User.IsInRole("Admin"))



        {
            <li>
                <a class="premium-auth-link" asp-area="" asp-controller="Admin" asp-action="Index">Dashboard</a>
            </li>
        }

        <li>
            <a class="premium-auth-link" asp-area="" asp-controller="Orders" asp-action="Index">I Miei Ordini</a>
        </li>
        <li>
            <a class="premium-auth-link premium-auth-user" asp-area="" asp-controller="Profile" asp-action="Index"
                title="Profilo">Hello @User.Identity?.Name!</a>
        </li>
        <li>
            <form id="logoutForm" class="inline" asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="premium-auth-link w-full text-left">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li>
            <a class="premium-auth-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li>
            <a class="premium-auth-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>

<!-- Login Modal -->
<div id="login-modal" class="fixed inset-0 z-[2000] hidden" aria-hidden="true" style="backdrop-filter: blur(5px);">
    <!-- Overlay -->
    <div class="absolute inset-0 bg-black/80" id="login-modal-overlay"></div>

    <!-- Modal Content -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-1/2 p-6">
        <div class="relative bg-[#0a0f1c] border border-white/10 rounded-2xl shadow-2xl overflow-hidden">
            <!-- Close Button -->
            <button type="button" id="login-modal-close"
                class="absolute top-4 right-4 text-gray-400 hover:text-white transition">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>

            <!-- Header -->
            <div class="text-center mb-8 mt-4">
                <h2 class="text-2xl font-bold text-white font-['Orbitron'] tracking-wider">LOGIN</h2>
                <p class="text-gray-400 text-sm mt-2">Access to the SkyLegends system</p>
            </div>

            <!-- Form -->
            <form method="post" action="/Identity/Account/Login" class="px-8 pb-8">
                <div class="space-y-5">
                    <div>
                        <label class="block text-xs font-medium text-gray-400 uppercase tracking-wider mb-1.5">Email
                            Address</label>
                        <input type="email" name="Input.Email" class="auth-input w-full rounded-lg px-4 py-3 transition"
                            placeholder="admin@skylegends.local" required />
                    </div>
                    <div>
                        <label
                            class="block text-xs font-medium text-gray-400 uppercase tracking-wider mb-1.5">Password</label>
                        <input type="password" name="Input.Password"
                            class="auth-input w-full rounded-lg px-4 py-3 transition" placeholder="********" required />
                    </div>

                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <input type="checkbox" id="remember-me" name="Input.RememberMe" value="true"
                                class="rounded border-gray-700 bg-gray-800 text-blue-600 focus:ring-blue-500 h-4 w-4" />
                            <label for="remember-me" class="ml-2 text-xs text-gray-400 cursor-pointer">Remember
                                me</label>
                        </div>
                        <a href="/Identity/Account/ForgotPassword"
                            class="text-xs text-blue-400 hover:text-blue-300">Forgot password?</a>
                    </div>

                    <button type="submit"
                        class="w-full bg-red-600 text-white font-bold py-3 rounded-lg shadow-lg">
                        SIGN IN
                    </button>

                    <div class="text-center mt-4">
                        <a href="/Identity/Account/Login"
                            class="text-xs text-gray-500 hover:text-white transition-colors">
                            Or go to standard login page
                        </a>
                    </div>
                </div>
                @Html.AntiForgeryToken()
            </form>
        </div>
    </div>
</div>

