<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SkyLegends</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Orbitron:wght@600;700;800&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>

<body class="bg-jet-black text-steel-white flex flex-col min-h-screen">
    <header class="premium-navbar-wrap">
        <nav class="premium-navbar" aria-label="Main navigation">
            <div class="premium-navbar-top">
                <a class="premium-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="premium-brand-sky">Sky</span>
                    <span class="premium-brand-legends">Legends</span>
                </a>

                <button class="premium-burger" type="button" aria-expanded="false" aria-controls="premium-mobile-menu"
                    aria-label="Apri il menu di navigazione">
                    <span class="premium-burger-line"></span>
                    <span class="premium-burger-line"></span>
                    <span class="premium-burger-line"></span>
                </button>
            </div>

            <div class="premium-mobile-panel" id="premium-mobile-menu">
                <div class="premium-nav-links">
                    <a class="premium-nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="premium-nav-link" asp-area="" asp-controller="Store" asp-action="Index">Catalogo</a>
                    <a class="premium-nav-link" asp-area="" asp-controller="Store" asp-action="Videos">Video</a>
                    <a class="premium-nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                </div>

                <div class="premium-auth">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow">
        @RenderBody()
    </main>

    <footer class="bg-sky-night-blue border-t border-titanium-grey py-8 mt-12">
        <div class="page-container flex flex-col md:flex-row justify-between items-center">
            <div class="mb-4 md:mb-0">
                <span class="text-lg font-bold">SkyLegends</span>
                <p class="text-sm text-gray-400 mt-1">Arte ad alta quota.</p>
            </div>
            <div class="text-sm text-gray-400">
                &copy; @DateTime.Now.Year - SkyLegends - <a asp-area="" asp-controller="Home" asp-action="Privacy"
                    class="hover:text-white">Privacy</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
