<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SkyLegends</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Orbitron:wght@600;700;800&display=swap"
        rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        #mobile-cart-icon { display: inline-block; }
        #desktop-cart-icon { display: none !important; }
        @@media (min-width: 768px) {
            #mobile-cart-icon { display: none !important; }
            #desktop-cart-icon { display: inline-block !important; }
        }
    </style>
</head>

<body class="bg-jet-black text-steel-white flex flex-col min-h-screen">
    <header class="premium-navbar-wrap">
        <nav class="premium-navbar" aria-label="Main navigation">
            <div class="premium-navbar-top">
                <a class="premium-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="premium-brand-sky">Sky</span>
                    <span class="premium-brand-legends">Legends</span>
                </a>

                <div class="flex items-center gap-3">
                    <!-- Cart Icon (mobile) -->
                    <a asp-controller="Cart" asp-action="Index"
                        class="relative inline-block text-gray-300 hover:text-white transition"
                        id="mobile-cart-icon"
                        title="Carrello">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                            stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 100 4 2 2 0 000-4z" />
                        </svg>
                        <span
                            class="cart-badge-sync bg-afterburner-red text-white text-xs font-bold rounded-full h-5 w-5 items-center justify-center"
                            style="position:absolute;top:-8px;right:-8px;display:none;">0</span>
                    </a>

                    <button class="premium-burger" type="button" aria-expanded="false"
                        aria-controls="premium-mobile-menu" aria-label="Apri il menu di navigazione">
                        <span class="premium-burger-line"></span>
                        <span class="premium-burger-line"></span>
                        <span class="premium-burger-line"></span>
                    </button>
                </div>
            </div>

            <div class="premium-mobile-panel" id="premium-mobile-menu">
                <div class="premium-nav-links">
                    <a class="premium-nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="premium-nav-link" asp-area="" asp-controller="Store" asp-action="Index">Catalogo</a>
                    <a class="premium-nav-link" asp-area="" asp-controller="Store" asp-action="Videos">Video</a>
                    <a class="premium-nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                </div>

                <div class="flex items-center gap-4">
                    <!-- Cart Icon (desktop only) -->
                    <a asp-controller="Cart" asp-action="Index"
                        class="relative inline-block text-gray-300 hover:text-white transition" style="display:none;"
                        id="desktop-cart-icon" title="Carrello">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                            stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 100 4 2 2 0 000-4z" />
                        </svg>
                        <span
                            class="cart-badge-sync bg-afterburner-red text-white text-xs font-bold rounded-full h-5 w-5 items-center justify-center"
                            style="position:absolute;top:-8px;right:-8px;display:none;">0</span>
                    </a>

                    <div class="premium-auth">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow">
        @RenderBody()
    </main>

    <footer class="bg-sky-night-blue border-t border-titanium-grey py-8 mt-12">
        <div class="page-container flex flex-col md:flex-row justify-between items-center">
            <div class="mb-4 md:mb-0">
                <span class="text-lg font-bold">SkyLegends</span>
                <p class="text-sm text-gray-400 mt-1">Arte ad alta quota.</p>
            </div>
            <div class="text-sm text-gray-400">
                &copy; @DateTime.Now.Year - SkyLegends - <a asp-area="" asp-controller="Home" asp-action="Privacy"
                    class="hover:text-white">Privacy</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
