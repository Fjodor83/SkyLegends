@model SkyLegends.Models.Video

@{
    ViewData["Title"] = "Elimina Video";
    Layout = "_Layout";
}

<div class="page-shell bg-jet-black">
    <div class="page-container max-w-3xl">
        <h1 class="text-2xl sm:text-3xl font-bold text-white mb-6">Elimina Video</h1>

        <div class="bg-titanium-grey p-6 rounded-lg border border-red-500">
            <h3 class="text-xl text-white mb-4">Sei sicuro di voler eliminare questo video?</h3>

            <dl class="grid grid-cols-1 gap-x-4 gap-y-4 sm:grid-cols-2 mb-6">
                <dt class="text-sm font-medium text-gray-400">Titolo</dt>
                <dd class="text-sm text-white">@Model.Title</dd>

                <dt class="text-sm font-medium text-gray-400">URL</dt>
                <dd class="text-sm text-white">@Model.VideoUrl</dd>
            </dl>

            <form asp-action="DeleteVideo">
                <input type="hidden" asp-for="Id" />
                <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
                    <button type="submit"
                        class="w-full sm:w-auto bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
                        Conferma Eliminazione
                    </button>
                    <a asp-action="Videos" class="text-gray-300 hover:text-white text-center">Annulla</a>
                </div>
            </form>
        </div>
    </div>
</div>
