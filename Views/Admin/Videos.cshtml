@model IEnumerable<SkyLegends.Models.Video>

@{
    ViewData["Title"] = "Gestione Video";

    Layout = "_Layout";
}

<div class="page-shell bg-jet-black">
    <div class="page-container">
        <div class="mb-6 flex flex-col gap-3 sm:flex-row sm:justify-between sm:items-center">
            <h1 class="text-2xl sm:text-3xl font-bold text-white">Elenco Video</h1>
            <a asp-action="CreateVideo"
                class="inline-flex items-center justify-center bg-afterburner-red hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
                Nuovo Video
            </a>
        </div>

        <div class="overflow-x-auto relative shadow-md sm:rounded-lg">
            <table class="w-full text-sm text-left text-gray-400">
                <thead class="text-xs text-gray-200 uppercase bg-sky-night-blue">
                    <tr>
                        <th scope="col" class="py-3 px-3 sm:px-6">Titolo</th>
                        <th scope="col" class="py-3 px-3 sm:px-6">URL</th>
                        <th scope="col" class="py-3 px-3 sm:px-6">Creato il</th>
                        <th scope="col" class="py-3 px-3 sm:px-6">Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)

                    {
                        <tr class="bg-titanium-grey border-b border-gray-700 hover:bg-gray-600">
                            <td class="py-4 px-3 sm:px-6 font-medium text-white whitespace-nowrap">
                                @item.Title
                            </td>
                            <td class="py-4 px-3 sm:px-6 break-all max-w-[12rem] sm:max-w-xs">
                                @item.VideoUrl
                            </td>
                            <td class="py-4 px-3 sm:px-6 whitespace-nowrap">
                                @item.CreatedAt.ToShortDateString()
                            </td>
                            <td class="py-4 px-3 sm:px-6 whitespace-nowrap">
                                <a asp-action="EditVideo" asp-route-id="@item.Id"
                                    class="font-medium text-blue-500 hover:underline mr-3">Modifica</a>
                                <a asp-action="DeleteVideo" asp-route-id="@item.Id"
                                    class="font-medium text-red-500 hover:underline">Elimina</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-4">
            <a asp-action="Index" class="text-afterburner-red hover:underline">Torna alla Dashboard</a>
        </div>
    </div>
</div>
