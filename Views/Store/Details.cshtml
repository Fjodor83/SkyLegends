@model SkyLegends.Models.Poster

@{
    ViewData["Title"] = Model.Title;
}

<div class="bg-jet-black min-h-screen py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="lg:grid lg:grid-cols-2 lg:gap-x-8 lg:items-start">
            <!-- Image gallery -->
            <div class="flex flex-col-reverse">
                <div class="w-full aspect-w-1 aspect-h-1">
                    <img src="@Model.ImageUrl" alt="@Model.Title"
                        class="w-full h-full object-center object-cover sm:rounded-lg shadow-xl ring-1 ring-titanium-grey">
                </div>
            </div>

            <!-- Product info -->
            <div class="mt-10 px-4 sm:px-0 sm:mt-16 lg:mt-0">
                <h1 class="text-3xl font-extrabold tracking-tight text-white">@Model.Title</h1>

                <div class="mt-3">
                    <p class="text-3xl text-afterburner-red">Original Print</p>
                </div>

                <div class="mt-6">
                    <h3 class="sr-only">Description</h3>
                    <div class="text-base text-gray-300 space-y-6">
                        <p>@Model.Description</p>
                    </div>
                </div>

                <div class="mt-6">
                    <div class="text-sm text-gray-400">
                        <span class="font-medium text-white">Tags:</span> @Model.Tags
                    </div>
                </div>

                <div class="mt-10 flex sm:flex-col1">
                    <button type="button"
                        class="max-w-xs flex-1 bg-afterburner-red border border-transparent rounded-md py-3 px-8 flex items-center justify-center text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-900 focus:ring-red-500 sm:w-full transition duration-300">
                        Aggiungi ai preferiti
                    </button>

                    <a asp-action="Index"
                        class="ml-4 max-w-xs flex-1 bg-white border border-transparent rounded-md py-3 px-8 flex items-center justify-center text-base font-medium text-jet-black hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-900 focus:ring-gray-500 sm:w-full transition duration-300">
                        Torna al catalogo
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
