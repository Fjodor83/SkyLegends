@model IEnumerable<SkyLegends.Models.Video>

@{
    ViewData["Title"] = "Video";
}

<div class="bg-jet-black min-h-screen pt-24 pb-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h1 class="text-3xl font-extrabold text-white sm:text-4xl">
                Galleria Video
            </h1>
            <p class="mt-4 text-xl text-gray-400">
                Scopri la potenza in movimento.
            </p>
        </div>

        <div class="grid grid-cols-1 gap-y-10 sm:grid-cols-2 gap-x-6 lg:grid-cols-3 xl:gap-x-8">
            @foreach (var item in Model)
            {
                    <div class="group relative bg-jet-black rounded-lg overflow-hidden shadow-lg border border-titanium-grey transition-all duration-300 hover:shadow-2xl hover:-translate-y-1">
                        <!-- Red side accent on hover -->
                        <div class="absolute top-0 bottom-0 left-0 w-1 bg-afterburner-red transform -translate-x-full transition-transform duration-300 group-hover:translate-x-0 z-20">
                        </div>

                        <div class="aspect-w-16 aspect-h-9 bg-gray-900 group-hover:opacity-100 relative overflow-hidden"
                             onmouseenter="let v=this.querySelector('video'); if(v) v.play()"
                             onmouseleave="let v=this.querySelector('video'); if(v) { v.pause(); v.currentTime = 0; }">
                        @if (!string.IsNullOrEmpty(item.ThumbnailUrl))
                        {
                                    <img src="@item.ThumbnailUrl" alt="@item.Title" class="w-full h-full object-center object-cover transition-transform duration-700 group-hover:scale-110">
                        }
                        else
                        {
                                     <!-- Placeholder gradient if no thumbnail -->
                                    <div class="w-full h-full bg-gradient-to-br from-gray-800 to-gray-900 flex items-center justify-center">
                                        <span class="text-gray-500 text-6xl"><i class="fas fa-play"></i></span>
                                    </div>
                        }

                            <div class="absolute inset-0 bg-black bg-opacity-40 group-hover:bg-opacity-20 transition-all duration-300 flex items-center justify-center pointer-events-none">
                                <div class="w-16 h-16 bg-afterburner-red rounded-full flex items-center justify-center shadow-lg transform scale-90 group-hover:scale-110 transition-transform duration-300">
                                    <svg class="w-8 h-8 text-white ml-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"></path>
                                    </svg>
                                </div>
                            </div>

                            @if (item.VideoUrl.EndsWith(".mp4") || item.VideoUrl.EndsWith(".webm"))
                            {
                                <video src="@item.VideoUrl" muted loop playsinline preload="none" 
                                       class="absolute inset-0 w-full h-full object-cover z-10 hidden group-hover:block pointer-events-none"></video>
                            }
                        </div>

                        <div class="p-6 relative z-10">
                            <h3 class="text-xl font-bold text-white group-hover:text-afterburner-red transition-colors duration-300 mb-2">
                                <a href="@item.VideoUrl" target="_blank">
                                    <span aria-hidden="true" class="absolute inset-0"></span>
                                @item.Title
                                </a>
                            </h3>
                            <p class="text-sm text-gray-400 line-clamp-3">@item.Description</p>
                            <div class="mt-4 flex items-center text-afterburner-red text-sm font-medium opacity-0 transform translate-y-4 transition-all duration-300 group-hover:opacity-100 group-hover:translate-y-0">
                                Guarda Video <span aria-hidden="true" class="ml-1">&rarr;</span>
                            </div>
                        </div>
                    </div>
            }
        </div>
    </div>
</div>
