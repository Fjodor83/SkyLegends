@model IEnumerable<SkyLegends.Models.Poster>

@{
    ViewData["Title"] = "Catalogo";
}

<div class="page-shell bg-jet-black">
    <div class="page-container">
        <div class="text-center mb-10 sm:mb-12">
            <h1 class="text-2xl font-extrabold text-white sm:text-4xl">
                Catalogo Poster
            </h1>
            <p class="mt-4 text-base text-gray-400 sm:text-xl">
                Scegli la tua prossima leggenda.
            </p>
        </div>

        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 sm:gap-8 lg:grid-cols-3 xl:gap-x-8">
            @foreach (var item in Model)
            {
                <div
                    class="group relative bg-jet-black rounded-lg overflow-hidden shadow-lg border border-titanium-grey transition-all duration-300 hover:shadow-2xl hover:-translate-y-1">
                    <!-- Red side accent on hover -->
                    <div
                        class="absolute top-0 bottom-0 left-0 w-1 bg-afterburner-red transform -translate-x-full transition-transform duration-300 group-hover:translate-x-0 z-20">
                    </div>

                    <!-- Availability badge -->
                    @if (!item.IsAvailable)
                    {
                        <div class="absolute top-3 right-3 z-30 bg-gray-800/90 text-gray-400 text-xs font-semibold px-3 py-1 rounded-full">
                            Esaurito
                        </div>
                    }

                    <div class="aspect-[3/4] bg-gray-900 group-hover:opacity-100 relative overflow-hidden">
                        <img src="@item.ImageUrl" alt="@item.Title"
                            class="w-full h-full object-center object-cover transition-transform duration-700 group-hover:scale-110">
                        <div
                            class="absolute inset-0 bg-gradient-to-t from-jet-black via-transparent to-transparent opacity-60">
                        </div>
                    </div>
                    <div class="p-6 relative z-10">
                        <h3
                            class="text-xl font-bold text-white group-hover:text-afterburner-red transition-colors duration-300">
                            <a asp-action="Details" asp-route-id="@item.Id">
                                <span aria-hidden="true" class="absolute inset-0"></span>
                                @item.Title
                            </a>
                        </h3>
                        <p class="mt-2 text-sm text-gray-400">@item.Tags</p>
                        <div class="mt-3 flex items-center justify-between">
                            <span class="text-lg font-bold text-afterburner-red">â‚¬@item.Price.ToString("N2")</span>
                            <div
                                class="flex items-center text-afterburner-red text-sm font-medium opacity-0 transform translate-y-4 transition-all duration-300 group-hover:opacity-100 group-hover:translate-y-0">
                                Dettagli <span aria-hidden="true" class="ml-1">&rarr;</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
