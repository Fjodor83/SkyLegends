@model List<SkyLegends.Models.CartItem>

@{
    ViewData["Title"] = "Carrello";
}

<div class="page-shell bg-jet-black">
    <div class="page-container max-w-4xl">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 mb-8">
            <div>
                <h1 class="text-2xl sm:text-3xl font-bold text-white">Il tuo carrello</h1>
                <p class="text-gray-400 text-sm mt-1">Controlla articoli, quantita e totale prima del checkout.</p>
            </div>
            <a asp-controller="Store" asp-action="Index"
                class="inline-flex items-center justify-center rounded-lg border border-gray-600 px-4 py-2 text-sm font-medium text-gray-200 hover:text-white hover:border-gray-400 transition">
                Continua gli acquisti
            </a>
        </div>

        @if (Model.Count == 0)
        {
            <div class="bg-titanium-grey rounded-lg border border-gray-700 p-10 text-center">
                <h2 class="text-white text-xl font-semibold mb-2">Carrello vuoto</h2>
                <p class="text-gray-400 mb-6">Non hai ancora aggiunto prodotti.</p>
                <a asp-controller="Store" asp-action="Index"
                    class="inline-flex items-center justify-center bg-afterburner-red hover:bg-red-700 text-white font-bold py-3 px-8 rounded-lg transition">
                    Vai al catalogo
                </a>
            </div>
        }
        else
        {
            <div class="bg-titanium-grey rounded-lg border border-gray-700 overflow-hidden">
                <div>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];
                        <div class="p-4 sm:p-6 @(i < Model.Count - 1 ? "border-b border-gray-700" : "")">
                            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                                <div class="flex gap-4 items-center min-w-0">
                                    <img src="@item.ImageUrl" alt="@item.Title" class="w-16 h-16 rounded-lg object-cover border border-gray-700">
                                    <div class="min-w-0">
                                        <h3 class="text-white font-semibold truncate">@item.Title</h3>
                                        <form asp-action="Remove" method="post" class="mt-1">
                                            <input type="hidden" name="posterId" value="@item.PosterId" />
                                            <button type="submit" class="text-red-500 hover:text-red-400 text-sm transition">
                                                Rimuovi
                                            </button>
                                        </form>
                                    </div>
                                </div>

                                <div class="text-gray-200 font-medium">
                                    EUR @item.Price.ToString("N2")
                                </div>

                                <div>
                                    <div class="inline-flex items-center rounded-lg border border-gray-600 overflow-hidden">
                                        <form asp-action="UpdateQuantity" method="post">
                                            <input type="hidden" name="posterId" value="@item.PosterId" />
                                            <input type="hidden" name="quantity" value="@(item.Quantity - 1)" />
                                            <button type="submit" class="px-3 py-2 text-white hover:bg-gray-700 transition">-</button>
                                        </form>
                                        <span class="px-4 py-2 text-white font-semibold w-12 text-center border-x border-gray-600">@item.Quantity</span>
                                        <form asp-action="UpdateQuantity" method="post">
                                            <input type="hidden" name="posterId" value="@item.PosterId" />
                                            <input type="hidden" name="quantity" value="@(item.Quantity + 1)" />
                                            <button type="submit" class="px-3 py-2 text-white hover:bg-gray-700 transition">+</button>
                                        </form>
                                    </div>
                                </div>

                                <div class="text-white font-bold sm:text-right">
                                    EUR @item.Total.ToString("N2")
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="mt-6 bg-sky-night-blue rounded-lg border border-gray-700 p-6">
                <div class="flex items-center justify-between">
                    <span class="text-lg text-gray-300 font-medium">Totale ordine</span>
                    <span class="text-2xl text-white font-bold">EUR @(((decimal)ViewBag.Total).ToString("N2"))</span>
                </div>
                <a asp-controller="Checkout" asp-action="Index"
                    class="mt-4 w-full sm:w-auto inline-flex items-center justify-center bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-8 rounded-lg transition shadow-lg shadow-green-600/20">
                    Procedi al pagamento
                </a>
            </div>
        }
    </div>
</div>

