@{
    ViewData["Title"] = "Home Page";
}

<div class="relative bg-jet-black overflow-hidden h-screen">
    <!-- Background Image with Zoom Effect -->
    <!-- Heat Haze SVG Filter -->
    <svg class="absolute w-0 h-0">
        <defs>
            <filter id="heatHaze" x="-50%" y="-20%" width="200%" height="140%">
                <feTurbulence type="fractalNoise" baseFrequency="0.03 0.06" numOctaves="3" result="noise" seed="0" />
                <feOffset in="noise" dx="0" dy="0" result="offsetNoise">
                    <animate attributeName="dx" from="0" to="-100" dur="0.5s" repeatCount="indefinite" />
                </feOffset>
                <feDisplacementMap in="SourceGraphic" in2="offsetNoise" scale="5" xChannelSelector="R"
                    yChannelSelector="G" />
            </filter>
        </defs>
    </svg>

    <!-- Background Image with Zoom Effect -->
    <div class="absolute inset-0 z-0 overflow-hidden">
        <img class="w-full h-full object-cover opacity-60 animate-subtle-zoom animate-fade-in-up"
            style="filter: url(#heatHaze);" src="/img/hero-bg.jpg" alt="Fighter Jet">
        <div class="absolute inset-0 bg-gradient-to-r from-jet-black via-jet-black/80 to-transparent"></div>
    </div>

    <div class="max-w-7xl mx-auto h-full flex flex-col justify-center relative z-10">
        <div class="px-4 sm:px-6 lg:px-8">
            <div class="sm:text-center lg:text-left max-w-3xl">
                <h1
                    class="text-5xl tracking-tight font-extrabold text-white sm:text-6xl md:text-7xl animate-fade-in-up">
                    <span
                        class="block text-transparent bg-clip-text bg-gradient-to-r from-white to-gray-400 pb-2">SkyLegends</span>
                    <span class="block text-afterburner-red mt-2 animate-fade-in-up animation-delay-200">Arte ad alta
                        quota.</span>
                </h1>
                <p
                    class="mt-6 text-lg text-gray-300 sm:text-xl md:text-2xl max-w-2xl animate-fade-in-up animation-delay-400">
                    Dove volano le leggende.
                    Esplora la collezione esclusiva di poster che catturano l'essenza della potenza aerea.
                </p>
                <div class="mt-10 sm:flex sm:justify-center lg:justify-start animate-fade-in-up animation-delay-600">
                    <div class="rounded-md shadow-lg glow-effect">
                        <a asp-controller="Store" asp-action="Index"
                            class="w-full flex items-center justify-center px-8 py-4 border border-transparent text-lg font-bold rounded-md text-white bg-afterburner-red hover:bg-red-700 transition duration-300 transform hover:scale-105">
                            Esplora i poster
                        </a>
                    </div>
                    <div class="mt-3 sm:mt-0 sm:ml-6">
                        <a asp-controller="Home" asp-action="About"
                            class="w-full flex items-center justify-center px-8 py-4 border border-gray-500/50 text-lg font-medium rounded-md text-white bg-black/30 hover:bg-black/50 backdrop-blur-sm transition duration-300">
                            Chi siamo
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="bg-jet-black py-24 relative z-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="lg:text-center animate-fade-in-up">
            <h2 class="text-base text-afterburner-red font-semibold tracking-wide uppercase">Collezioni</h2>
            <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-white sm:text-4xl">
                Dettagli che raccontano una storia.
            </p>
            <p class="mt-4 max-w-2xl text-xl text-gray-400 lg:mx-auto">
                Dagli intercettori della Guerra Fredda ai moderni caccia stealth.
            </p>
        </div>

        <div class="mt-16">
            <div class="space-y-10 md:space-y-0 md:grid md:grid-cols-3 md:gap-x-8 md:gap-y-10">
                <!-- Card 1 -->
                <div class="relative group cursor-pointer">
                    <div
                        class="absolute -inset-1 bg-gradient-to-r from-afterburner-red to-blue-600 rounded-lg blur opacity-25 group-hover:opacity-75 transition duration-500 group-hover:duration-200">
                    </div>
                    <div
                        class="relative p-8 bg-gray-900 ring-1 ring-gray-900/5 rounded-lg leading-none flex items-top justify-start space-x-6 h-full transition-transform duration-300 group-hover:-translate-y-2">
                        <div class="flex-shrink-0">
                            <div
                                class="flex items-center justify-center h-12 w-12 rounded-md bg-gradient-to-br from-afterburner-red to-red-700 text-white">
                                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M13 10V3L4 14h7v7l9-11h-7z" />
                                </svg>
                            </div>
                        </div>
                        <div class="space-y-2">
                            <h3 class="text-xl font-bold text-white group-hover:text-afterburner-red transition-colors">
                                Dogfight</h3>
                            <p class="text-gray-400 text-sm leading-relaxed">
                                Il cielo come arena. Manovre al limite e duelli ravvicinati che sfidano la gravità.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Card 2 -->
                <div class="relative group cursor-pointer">
                    <div
                        class="absolute -inset-1 bg-gradient-to-r from-sky-night-blue to-teal-400 rounded-lg blur opacity-25 group-hover:opacity-75 transition duration-500 group-hover:duration-200">
                    </div>
                    <div
                        class="relative p-8 bg-gray-900 ring-1 ring-gray-900/5 rounded-lg leading-none flex items-top justify-start space-x-6 h-full transition-transform duration-300 group-hover:-translate-y-2">
                        <div class="flex-shrink-0">
                            <div
                                class="flex items-center justify-center h-12 w-12 rounded-md bg-gradient-to-br from-sky-night-blue to-blue-900 text-white">
                                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                                </svg>
                            </div>
                        </div>
                        <div class="space-y-2">
                            <h3 class="text-xl font-bold text-white group-hover:text-sky-400 transition-colors">
                                Supersonic</h3>
                            <p class="text-gray-400 text-sm leading-relaxed">
                                Quando la velocità diventa leggenda. Oltre la barriera del suono, verso l'ignoto.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Card 3 -->
                <div class="relative group cursor-pointer">
                    <div
                        class="absolute -inset-1 bg-gradient-to-r from-gray-600 to-gray-400 rounded-lg blur opacity-25 group-hover:opacity-75 transition duration-500 group-hover:duration-200">
                    </div>
                    <div
                        class="relative p-8 bg-gray-900 ring-1 ring-gray-900/5 rounded-lg leading-none flex items-top justify-start space-x-6 h-full transition-transform duration-300 group-hover:-translate-y-2">
                        <div class="flex-shrink-0">
                            <div
                                class="flex items-center justify-center h-12 w-12 rounded-md bg-gradient-to-br from-gray-700 to-gray-900 text-white">
                                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                                </svg>
                            </div>
                        </div>
                        <div class="space-y-2">
                            <h3 class="text-xl font-bold text-white group-hover:text-gray-300 transition-colors">Cold
                                War Icons</h3>
                            <p class="text-gray-400 text-sm leading-relaxed">
                                F-4 Phantom, MiG-21, F-14 Tomcat. I giganti d'acciaio che hanno fatto la storia.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
