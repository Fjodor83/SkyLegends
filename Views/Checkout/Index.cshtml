@model SkyLegends.Models.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<style>
    .checkout-input {
        width: 100%;
        border-radius: 0.5rem;
        border: 1px solid #374151;
        background: #020712;
        color: #fff;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
        outline: none;
        transition: border-color 0.2s;
    }
    .checkout-input:focus {
        border-color: #dc2626;
        box-shadow: 0 0 0 2px rgba(220,38,38,0.25);
    }
    .checkout-input::placeholder { color: #6b7280; }

    .checkout-grid-2 {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
    }
    .checkout-grid-3 {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
    }
    @@media (min-width: 480px) {
        .checkout-grid-2 { grid-template-columns: 1fr 1fr; }
        .checkout-grid-3 { grid-template-columns: 1fr 1fr 1fr; }
    }

    .step-bar {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        overflow: hidden;
    }
    .step-dot {
        width: 1.5rem;
        height: 1.5rem;
        border-radius: 9999px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 0.7rem;
        font-weight: 700;
        flex-shrink: 0;
    }
    .step-line {
        flex: 1;
        height: 1px;
        background: rgba(255,255,255,0.1);
        min-width: 0;
    }
    .checkout-card {
        background: #0a0f1c;
        border: 1px solid rgba(255,255,255,0.1);
        border-radius: 0.75rem;
        overflow: hidden;
    }
    .checkout-submit {
        width: 100%;
        background: #dc2626;
        color: #fff;
        font-weight: 700;
        font-size: 1rem;
        padding: 1rem;
        border-radius: 0.5rem;
        border: none;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        transition: background 0.2s;
    }
    .checkout-submit:hover { background: #b91c1c; }
</style>

<div class="page-shell bg-jet-black" style="overflow-x:hidden;">
    <div class="page-container" style="max-width:48rem; overflow-x:hidden;">

        @* Header *@
        <div class="text-center mb-6">
            <h1 class="text-2xl font-bold text-white">Checkout</h1>
            <p class="mt-1 text-sm text-gray-400">Inserisci i dati di spedizione per procedere al pagamento.</p>
        </div>

        @* Step bar *@
        <div class="step-bar mb-6">
            <span class="step-dot" style="background:#dc2626;color:#fff;">1</span>
            <span class="text-white text-sm font-medium" style="white-space:nowrap;">Spedizione</span>
            <span class="step-line"></span>
            <span class="step-dot" style="background:rgba(255,255,255,0.08);color:#6b7280;">2</span>
            <span class="text-gray-500 text-sm" style="white-space:nowrap;">Pagamento</span>
            <span class="step-line"></span>
            <span class="step-dot" style="background:rgba(255,255,255,0.08);color:#6b7280;">3</span>
            <span class="text-gray-500 text-sm" style="white-space:nowrap;">Conferma</span>
        </div>

        <form asp-action="CreateSession" method="post" style="display:flex;flex-direction:column;gap:1.5rem;">

            @* ── Shipping form ── *@
            <div class="checkout-card">
                <div class="p-6" style="display:flex;flex-direction:column;gap:1.25rem;">
                    <h2 class="text-lg font-semibold text-white" style="display:flex;align-items:center;gap:0.5rem;">
                        <svg xmlns="http://www.w3.org/2000/svg" style="width:1.1rem;height:1.1rem;flex-shrink:0;" fill="none" viewBox="0 0 24 24" stroke="#dc2626" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                        </svg>
                        Dati di spedizione
                    </h2>

                    <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

                    @* Nome *@
                    <div>
                        <label asp-for="CustomerName" class="block text-sm font-medium text-gray-300 mb-1"></label>
                        <input asp-for="CustomerName" class="checkout-input" placeholder="Mario Rossi" />
                        <span asp-validation-for="CustomerName" class="text-red-500 text-xs mt-1 block"></span>
                    </div>

                    @* Email + Phone *@
                    <div class="checkout-grid-2">
                        <div>
                            <label asp-for="Email" class="block text-sm font-medium text-gray-300 mb-1"></label>
                            <input asp-for="Email" class="checkout-input" placeholder="mario@email.com" />
                            <span asp-validation-for="Email" class="text-red-500 text-xs mt-1 block"></span>
                        </div>
                        <div>
                            <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-300 mb-1"></label>
                            <input asp-for="PhoneNumber" class="checkout-input" placeholder="+39 333 000 0000" />
                            <span asp-validation-for="PhoneNumber" class="text-red-500 text-xs mt-1 block"></span>
                        </div>
                    </div>

                    @* Via + Civico *@
                    <div class="checkout-grid-2">
                        <div>
                            <label asp-for="StreetAddress" class="block text-sm font-medium text-gray-300 mb-1"></label>
                            <input asp-for="StreetAddress" class="checkout-input" placeholder="Via Roma" />
                            <span asp-validation-for="StreetAddress" class="text-red-500 text-xs mt-1 block"></span>
                        </div>
                        <div>
                            <label asp-for="StreetNumber" class="block text-sm font-medium text-gray-300 mb-1"></label>
                            <input asp-for="StreetNumber" class="checkout-input" placeholder="10" />
                            <span asp-validation-for="StreetNumber" class="text-red-500 text-xs mt-1 block"></span>
                        </div>
                    </div>

                    @* Città + Provincia + Nazione *@
                    <div class="checkout-grid-3">
                        <div>
                            <label asp-for="City" class="block text-sm font-medium text-gray-300 mb-1"></label>
                            <input asp-for="City" class="checkout-input" placeholder="Milano" />
                            <span asp-validation-for="City" class="text-red-500 text-xs mt-1 block"></span>
                        </div>
                        <div>
                            <label asp-for="Province" class="block text-sm font-medium text-gray-300 mb-1"></label>
                            <input asp-for="Province" class="checkout-input" placeholder="MI" />
                            <span asp-validation-for="Province" class="text-red-500 text-xs mt-1 block"></span>
                        </div>
                        <div>
                            <label asp-for="Country" class="block text-sm font-medium text-gray-300 mb-1"></label>
                            <input asp-for="Country" class="checkout-input" placeholder="Italia" />
                            <span asp-validation-for="Country" class="text-red-500 text-xs mt-1 block"></span>
                        </div>
                    </div>
                </div>
            </div>

            @* ── Order summary ── *@
            <div class="checkout-card">
                <div class="p-6" style="border-bottom:1px solid rgba(255,255,255,0.1);">
                    <h2 class="text-lg font-semibold text-white" style="display:flex;align-items:center;gap:0.5rem;">
                        <svg xmlns="http://www.w3.org/2000/svg" style="width:1.1rem;height:1.1rem;flex-shrink:0;" fill="none" viewBox="0 0 24 24" stroke="#dc2626" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                        </svg>
                        Riepilogo ordine
                    </h2>
                </div>

                <div class="p-6" style="display:flex;flex-direction:column;gap:1rem;">
                    @foreach (var item in Model.CartItems)
                    {
                        <div style="display:flex;align-items:center;justify-content:space-between;gap:0.75rem;">
                            <div style="display:flex;align-items:center;gap:0.75rem;min-width:0;">
                                <img src="@item.ImageUrl" alt="@item.Title"
                                     style="width:3rem;height:3rem;object-fit:cover;border-radius:0.5rem;border:1px solid rgba(255,255,255,0.1);flex-shrink:0;" />
                                <div style="min-width:0;">
                                    <p class="text-white text-sm font-medium" style="overflow:hidden;text-overflow:ellipsis;white-space:nowrap;">@item.Title</p>
                                    <p class="text-gray-400 text-xs">Qtà: @item.Quantity</p>
                                </div>
                            </div>
                            <span class="text-white text-sm font-semibold" style="flex-shrink:0;">€@item.Total.ToString("N2")</span>
                        </div>
                    }
                </div>

                <div class="p-6" style="border-top:1px solid rgba(255,255,255,0.1);display:flex;flex-direction:column;gap:0.75rem;">
                    <div style="display:flex;justify-content:space-between;font-size:0.875rem;color:#9ca3af;">
                        <span>Subtotale</span>
                        <span>€@(((decimal)ViewBag.Total).ToString("N2"))</span>
                    </div>
                    <div style="display:flex;justify-content:space-between;font-size:0.875rem;color:#9ca3af;">
                        <span>Spedizione</span>
                        <span style="color:#4ade80;">Gratuita</span>
                    </div>
                    <div style="display:flex;justify-content:space-between;align-items:center;border-top:1px solid rgba(255,255,255,0.1);padding-top:0.75rem;">
                        <span class="text-white font-bold text-lg">Totale</span>
                        <span style="color:#dc2626;font-size:1.5rem;font-weight:800;">€@(((decimal)ViewBag.Total).ToString("N2"))</span>
                    </div>

                    <button type="submit" class="checkout-submit" style="margin-top:0.5rem;">
                        <svg xmlns="http://www.w3.org/2000/svg" style="width:1.1rem;height:1.1rem;flex-shrink:0;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                        </svg>
                        Procedi al pagamento
                    </button>

                    <p class="text-center text-xs text-gray-500">Pagamento sicuro con Stripe 🔒</p>
                </div>
            </div>

        </form>

        <div class="mt-6 text-center">
            <a asp-controller="Cart" asp-action="Index" class="text-sm text-gray-400 hover:text-white transition">
                ← Torna al carrello
            </a>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
