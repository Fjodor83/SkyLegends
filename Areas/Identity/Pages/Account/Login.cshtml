@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="page-container py-12 flex justify-center items-center min-h-[60vh]">
    <div class="w-1/2">
        <div class="bg-[#0a0f1c] border border-white/10 rounded-2xl shadow-2xl overflow-hidden relative">
            <!-- Glow Effect -->
            <div
                class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-1 bg-gradient-to-r from-transparent via-blue-500 to-transparent opacity-50">
            </div>

            <div class="p-8">
                <div class="text-center mb-8">
                    <h1 class="text-3xl font-bold text-white font-['Orbitron'] tracking-wider">@ViewData["Title"]</h1>
                    <p class="text-gray-400 text-sm mt-2">Welcome back to SkyLegends</p>
                </div>

                <section>
                    <form id="account" method="post" class="space-y-6">
                        <div asp-validation-summary="ModelOnly"
                            class="text-red-500 text-sm text-center bg-red-900/20 p-2 rounded" role="alert"></div>

                        <div>
                            <label asp-for="Input.Email"
                                class="block text-xs font-medium text-gray-400 uppercase tracking-wider mb-1.5">Email</label>
                            <input asp-for="Input.Email" class="auth-input w-full rounded-lg px-4 py-3 transition"
                                autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <span asp-validation-for="Input.Email" class="text-red-500 text-xs mt-1 block"></span>
                        </div>

                        <div>
                            <label asp-for="Input.Password"
                                class="block text-xs font-medium text-gray-400 uppercase tracking-wider mb-1.5">Password</label>
                            <input asp-for="Input.Password" class="auth-input w-full rounded-lg px-4 py-3 transition"
                                autocomplete="current-password" aria-required="true" placeholder="password" />
                            <span asp-validation-for="Input.Password" class="text-red-500 text-xs mt-1 block"></span>
                        </div>

                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <input asp-for="Input.RememberMe"
                                    class="rounded border-gray-700 bg-gray-800 text-blue-600 focus:ring-blue-500 h-4 w-4" />
                                <label asp-for="Input.RememberMe"
                                    class="ml-2 text-xs text-gray-400 cursor-pointer">@Html.DisplayNameFor(m =>
                                    m.Input.RememberMe)</label>
                            </div>
                            <a id="forgot-password" asp-page="./ForgotPassword"
                                class="text-xs text-blue-400 hover:text-blue-300 transition-colors">Forgot password?</a>
                        </div>

                        <div>
                            <button id="login-submit" type="submit"
                                class="w-full bg-red-600 text-white font-bold py-3 rounded-lg shadow-lg">Log in</button>
                        </div>

                        <div class="text-center mt-4">
                            <p class="text-sm text-gray-400">
                                Don't have an account?
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"
                                    class="text-blue-400 hover:text-blue-300 font-medium transition-colors">Register</a>
                            </p>
                            <p class="mt-2 text-xs text-gray-500">
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation"
                                    class="hover:text-gray-300 transition-colors">Resend email confirmation</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
        </div>

        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="mt-8">
                <section>
                    <div class="relative">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-white/10"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="px-2 bg-[#0a0f1c] text-gray-500">Or continue with</span>
                        </div>
                    </div>

                    <div class="mt-6 grid grid-cols-1 gap-3">
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl"
                            method="post" class="w-full">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit"
                                    class="flex w-full items-center justify-center rounded-lg border border-white/10 bg-white/5 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-white/10 transition-colors"
                                    name="provider" value="@provider.Name"
                                    title="Log in using your @provider.DisplayName account">
                                    @provider.DisplayName
                                </button>
                            }
                        </form>
                    </div>
                </section>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


